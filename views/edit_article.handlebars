<h1>Edit article</h1>

<form method="POST" action="/articles/edit/{{article.id}}">
    <div class form-group>
        <label>Title:</label>
        <input class="form-control" name="title" type="text" value="{{article.title}}">
    </div>
    <div class form-group>
        <label>Author:</label>
        <input class="form-control" name="author" type="text" value="{{article.author}}">
    </div>
    <div class form-group>
        <label>Body:</label>
        <textarea class="form-control" name="body">{{article.body}}</textarea>
    </div>
    <br>
    <input class="btn btn-primary", type="submit", value="Submit">
</form>